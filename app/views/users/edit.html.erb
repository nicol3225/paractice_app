<h1>EDIT</h1>

<%= form_with model: @user, url: "/users/#{@user.id}/update" ,local: true do |form| %>
    <% if @user.errors %>
      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    <% end %>
    <p><%= form.text_field :username %></p>
    <p><%= form.text_field :email %></p>
    <p><%= form.text_field :password %></p>
    <p><%= form.file_field :image %></p>
    <p><%= form.submit "UPDETE" %></p>
<% end %>
